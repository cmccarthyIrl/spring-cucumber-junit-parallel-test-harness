<?xml version="1.0" encoding="UTF-8"?>
<extentreports>
    <configuration>
        <!-- report theme -->
        <!-- standard, dark -->
        <theme>standard</theme>

        <!-- document encoding -->
        <!-- defaults to UTF-8 -->
        <encoding>UTF-8</encoding>

        <!-- protocol for script and stylesheets -->
        <!-- defaults to https -->
        <protocol>https</protocol>

        <!-- title of the document -->
        <documentTitle>Spring Cucumber Test Framework</documentTitle>

        <!-- report name - displayed at top-nav -->
        <reportName>Spring Cucumber Test Framework</reportName>

        <!-- report headline - displayed at top-nav, after reportHeadline -->
        <reportHeadline>Automation Report</reportHeadline>

        <!-- global date format override -->
        <!-- defaults to yyyy-MM-dd -->
        <dateFormat>yyyy-MM-dd</dateFormat>

        <!-- global time format override -->
        <!-- defaults to HH:mm:ss -->
        <timeFormat>HH:mm:ss</timeFormat>

        <!-- custom javascript -->
        <scripts>
            <![CDATA[
         $(document).ready(function() {
            setTimeout(function() {
                $('#enableDashboard').click();
                    }, 500);
            });
        ]]>
        </scripts>

        <!-- custom styles -->
        <styles>
            <![CDATA[

            ]]>
            .sample{
            width: 25%;
            float: left;
            text-align: center;
            }
            .md-display-4 {
            word-wrap: break-word;
            }

            span[class="author label white-text"] {
            background-color: #b3b3b3;
            }

            th:nth-child(3), td:nth-child(3) {
            max-width: 250px !important;
            min-width: 200px !important;
            }

            #testrunner-logs-view > .col > .card-panel {
            height: 100%;
            overflow: scroll;
            text-align: center;
            }
            body:not(.default) {
            overflow: scroll !important;
            }
        </styles>
    </configuration>
</extentreports>